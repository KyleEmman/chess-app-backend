// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_MIGRATION_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  studentId    String        @unique
  name         String
  password     String
  role         String
  games        Game[]
  preparations Preparation[]
}

model Game {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  link   String @unique
  result String
  by     User   @relation(fields: [byId], references: [id])
  byId   Int
}

model Preparation {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  player   String
  result   String
  division String
  link     String @unique
  by       User   @relation(fields: [byId], references: [id])
  byId     Int
}
